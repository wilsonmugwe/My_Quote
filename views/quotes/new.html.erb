<h1>Add a New Quote</h1>

<%= form_with model: @quote, local: true do |form| %>
  <% if @quote.errors.any? %>
    <div id="error_explanation" style="margin-bottom: 20px;">
      <h2><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h2>
      <ul>
        <% @quote.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.label :quote %>
    <%= form.text_area :quote, rows: 4, required: true, class: "form-control" %>
  </div>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.label :philosopher_id, "Philosopher" %>
    <%= form.collection_select :philosopher_id, Philosopher.all, :id, :full_name,  { prompt: "Select a Philosopher" }, { class: "form-control" } %>
  </div>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.label :category_id, "Category" %>
    <%= form.collection_select :category_id, Category.all, :id, :category_name, { prompt: "Select a Category" }, { class: "form-control" } %>
  </div>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.label :publication_year, "Publication Year" %>
    <%= form.number_field :publication_year, class: "form-control", min: 0 %>
  </div>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.label :comments, "Comments" %>
    <%= form.text_area :comments, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.check_box :is_public %>
    <%= form.label :is_public, "Is Public?" %>
  </div>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.submit "Create Quote", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', my_quotes_path, class: "btn btn-secondary" %>
