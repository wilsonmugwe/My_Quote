<%= form_with(model: quote) do |form| %>
  <% if quote.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>
      <ul>
        <% quote.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :quote, style: "display: block" %>
    <%= form.text_area :quote %>
  </div>

  <div>
    <%= form.label :publication, style: "display: block" %>
    <%= form.number_field :publication %>
  </div>

  <div>
    <%= form.label :philosopher_id, style: "display: block" %>
    <%= form.collection_select :philosopher_id, Philosopher.all, :id, :full_name, prompt: 'Select Philosopher' %>
  </div>

  <div>
    <%= form.label :comments, style: "display: block" %>
    <%= form.text_area :comments %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
