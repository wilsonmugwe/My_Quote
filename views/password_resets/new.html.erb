<div class="container mt-4">
  <h1>Request Password Reset</h1>

  <%= form_with url: password_resets_path, method: :post, local: true do |form| %>
    <div class="form-group mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="form-group">
      <%= form.submit "Send Reset Instructions", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to "Back to Sign In", sign_in_path, class: "btn btn-link" %>
  </div>
</div>
