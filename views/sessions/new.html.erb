<!-- app/views/sessions/new.html.erb -->
<div class="container mt-4">
  <h1>Sign In</h1>
  
  <%= form_with url: sign_in_path, local: true do |form| %>
    <div class="form-group mb-3"> <!-- Added mb-3 for margin-bottom -->
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
    </div>
    
    <div class="form-group mb-3"> <!-- Added mb-3 for margin-bottom -->
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
    </div>
    
    <div class="form-group mb-3"> <!-- Added mb-3 for margin-bottom -->
      <%= form.submit "Sign In", class: "btn btn-primary" %>
    </div>
  <% end %>
  
  <div class="mt-3"> <!-- Added mt-3 for margin-top -->
    <%= link_to "Sign Up", sign_up_path %> | 
    <%= link_to "Forgot Password?", new_password_reset_path %> <!-- Updated link to password reset request page -->
  </div>
</div>
