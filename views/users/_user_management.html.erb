<div class="user-section">
  <p><strong><%= user.fname %> <%= user.lname %></strong> - <%= user.email %></p>
  <p class="<%= user.status %>">Status: <%= user.status.capitalize %></p>

  <% if user.status == 'active' %>
    <%= link_to 'Suspend', update_status_user_path(user, status: 'suspended'), method: :patch, data: { confirm: 'Are you sure you want to suspend this user?' } %> |
    <%= link_to 'Ban', update_status_user_path(user, status: 'banned'), method: :patch, data: { confirm: 'Are you sure you want to ban this user?' } %> |
  <% elsif user.status == 'suspended' || user.status == 'banned' %>
    <%= link_to 'Activate', update_status_user_path(user, status: 'active'), method: :patch, data: { confirm: 'Are you sure you want to activate this user?' } %> |
  <% end %>

  <%= link_to 'Toggle Admin', toggle_admin_user_path(user), method: :patch, data: { confirm: 'Are you sure you want to change this user\'s admin status?' } %> |
  <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %>
</div>
