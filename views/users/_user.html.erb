<div id="<%= dom_id user %>" class="user-info mb-5"> <!-- Increased bottom margin -->
  
  <p class="user-detail mb-4"> <!-- Increased bottom margin -->
    <strong>First name:</strong>
    <%= user.fname %>
  </p>

  <p class="user-detail mb-4"> <!-- Increased bottom margin -->
    <strong>Last name:</strong>
    <%= user.lname %>
  </p>

  <p class="user-detail mb-4"> <!-- Increased bottom margin -->
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p class="user-detail mb-4"> <!-- Increased bottom margin -->
    <strong>Current Password:</strong> 
    <span class="text-danger">ENCRYPTED</span>
    <!-- Remove the equal sign from the line below or remove the line completely -->
    <% user.password_digest %>
  </p>

  <p class="user-detail mb-4"> <!-- Increased bottom margin -->
    <strong>Is admin:</strong>
    <%= user.is_admin ? 'Yes' : 'No' %>
  </p>

  <p class="user-detail mb-4"> <!-- Increased bottom margin -->
    <strong>Status:</strong>
    <%= user.status %>
  </p>
</div>

<!-- Button to go to the user's quotes page, positioned at the end -->
<div class="mt-5"> <!-- Increased margin-top -->
  <%= link_to 'View My Quotes', my_quotes_path, class: 'btn btn-primary btn-lg' %> <!-- Added btn-lg class for larger button -->
</div>

<!-- Additional Actions -->
<div class="mt-5"> <!-- Increased margin-top -->
  <%= link_to 'Edit User', edit_user_path(user), class: 'btn btn-warning me-3' %> <!-- Increased right margin -->
  <%= link_to 'Delete Account', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger me-3' %> <!-- Increased right margin -->
  <%= link_to 'Back to User', users_path, class: 'btn btn-secondary' %> <!-- Button to go back to users -->
</div>
